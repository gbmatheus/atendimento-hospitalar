<!--Cabecalho-->
<%- include('layouts/admin-header.ejs', {title: 'Admin', page: 'Aréa do Administrador', table: 'Médicos'}); %>

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%- page %></h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group mr-2">
        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
      </div>
      <button type="buttons" class="btn btn-sm btn-outline-secondary dropdown-toggle">
        <span data-feather="calendar"></span>
        This week
      </button>
    </div>
  </div>

  <h3><%= table %></h3>
  <div class="table-responsive">
    <table class="table table-hover table-sm">
      <!--classe antiga -> table-striped-->
      <thead>
        <tr>
          <th>#</th>
          <th>Nome</th>
          <th>CRM</th>
          <th>Especialidade</th>
          <th>Login</th>
          <th>Senha</th>
          <th>Permissão</th>
          <th>Opções</th>
        </tr>
      </thead>

      <tbody>
        <% if (data) { %> <%data.forEach((user) => { %> <% if(user.permissao == 'm') { %>
        <tr>
          <td><%= user.id %></td>
          <td>Nome do Médico</td>
          <td>CRM/UF</td>
          <td>Especialidade</td>
          <td><%= user.login %></td>
          <td><%= user.senha %></td>
          <td><%= user.permissao %></td>
          <td>
            <a class='btn btn-secondary btn-sm' href="/editar/<%= user.id %>">Editar</a>
            <a class='btn btn-danger btn-sm' href="/excluir/<%= user.id %>">Excluir</a>
          </td>
        </tr>
        <% } %> <% }) %> <% } %>
      </tbody>
    </table>
  </div>
</main>

<!--Rodapé-->
<%- include layouts/admin-footer.ejs %>