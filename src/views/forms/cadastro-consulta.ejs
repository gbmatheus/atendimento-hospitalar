<!--
  Id Nome do paciente CPF Nascimento Sexo
  Id Medico CRM Especialidade 
  Data hora
-->
<div class="row justify-content-center">
  <div class="col-md-5 order-md-1 mb-4">
    <h4 class="d-flex justify-content-between align-items-center mb-3">
      <span class="text-muted">Seu dados</span>
    </h4>
    <ul class="list-group mb-3">
      <li class="list-group-item d-flex justify-content-between lh-condensed">
        <div>
          <h6 class="my-0">Nome</h6>
          <small class="text-muted">paciente</small>
        </div>
        <span class="text-muted">R$12</span>
      </li>
      <li class="list-group-item d-flex justify-content-between lh-condensed">
        <div>
          <h6 class="my-0">Sexo</h6>
          <small class="text-muted">genero</small>
        </div>
        <span class="text-muted">R$8</span>
      </li>
      <li class="list-group-item d-flex justify-content-between lh-condensed">
        <div>
          <h6 class="my-0">Data de nascimento</h6>
          <small class="text-muted">data</small>
        </div>
        <span class="text-muted">R$5</span>
      </li>
      <li class="list-group-item d-flex justify-content-between lh-condensed">
        <div>
          <h6 class="my-0">CPF</h6>
          <small class="text-muted">numero</small>
        </div>
        <span class="text-muted">R$5</span>
      </li>
    </ul>

  </div>

  <div class="col-md-7 order-md-2">
    <h4 class="mb-4">Informações da consulta</h4>
    <form class="needs-validation" action="/atendimentos" method="POST" novalidate>

      <div class="mb-3">
        <label for="medico">Nome do médico</label>
        <input type="text" class="form-control" id="medico" name="medico" placeholder="" value="" required>
        <div class="invalid-feedback">
          É obrigatório inserir um nome válido.
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 mb-3">
          <label for="crm">CRM</label>
          <input type="text" class="form-control" id="crm" name="crm" placeholder="" value="" required>
          <div class="invalid-feedback">
            CRM é obrigatório.
          </div>
        </div>
        <div class="col-md-2 mb-3">
          <label for="emissor">UF</label>
          <input type="text" class="form-control" id="emissor" name="emissor" placeholder="" required>
          <div class="invalid-feedback">
            Emissor é obrigatório.
          </div>
        </div>
        <div class="col-md-6 mb-3">
          <label for="especialidade">Especialidade</label>
          <input type="text" class="form-control" id="especialidade" name="especialidade" placeholder="" required>
          <div class="invalid-feedback">
            Especialidade é obrigatória.
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 mb-3">
          <label for="data">Data</label>
          <input type="date" class="form-control" id="data" name="data" placeholder="" min="2019-06-2019" required>
          <div class="invalid-feedback">
            Por favor, insira data válida.
          </div>
        </div>
        <div class="col-md-3 mb-3">
          <label for="horario">Horário</label>
          <input type="time" class="form-control" id="horario" name="horario" placeholder="" min="08:00" max="16:59"
            required>
          <div class="invalid-feedback">
            Por favor, insira um horário válido.
          </div>
        </div>
        <div class="col-md-5 mb-3">
          <hr class="mb-3">
          <div class="row">
            <div class="col-md-6 mb-3">
              <button class="btn btn-primary btn-md btn-block" type="submit">Agendar</button>
            </div>
            <div class="col-md-6 mb-3">
              <a class="btn btn-secondary btn-md btn-block" href="#">Voltar</a>
            </div>
          </div>
        </div>
      </div>
<!-- 
      <hr class="mb-3">
      <div class="row">
        <div class="col-md-6 mb-3">
          <button class="btn btn-primary btn-md btn-block" type="submit">Agendar</button>
        </div>
        <div class="col-md-6 mb-3">
          <a class="btn btn-secondary btn-md btn-block" href="#">Voltar</a>
        </div>
      </div> -->

    </form>
  </div>
</div>